<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_img"
    tools:context=".view.information.guns.GunsActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/gunsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0DFFFFFF"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@color/red"
        app:tabIndicatorColor="@color/pubg_color"
        app:tabIndicatorHeight="1dp"
        app:tabTextColor="@color/tab_text_color"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/gunsViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gunsTabLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guns_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/guns_item_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>