<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000"
        motion:motionInterpolator="cubic(0.19,0.2,0.8,0.8)">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/gun_icon"
               motion:framePosition="0"
               android:rotation="-120" />
           <KeyAttribute
               motion:motionTarget="@+id/skull_icon"
               motion:framePosition="0"
               android:rotation="120" />
           <KeyAttribute
               motion:motionTarget="@+id/granade_icon"
               motion:framePosition="0"
               android:rotation="-120" />
           <KeyAttribute
               motion:motionTarget="@+id/gun_icon"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/skull_icon"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/granade_icon"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/gun_icon"
               motion:framePosition="30"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/skull_icon"
               motion:framePosition="30"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/granade_icon"
               motion:framePosition="30"
               android:alpha="1" />

       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>